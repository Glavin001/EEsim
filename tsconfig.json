{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["dom", "ESNext"],
    "typeRoots": ["node_modules/@types", "@types"],
    "outDir": "./build",
    "baseUrl": "./node_modules",
    "jsx": "preserve",
    "allowJs": true,
  },
  "include": [
    "src/**/*"
    //"node_modules/webgl-plot/dist/*",
    //"src/webglplot/*"
  ],
  "exclude": ["node_modules"]
}
